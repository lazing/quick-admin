%span.order
  = link_to url_for(grid.param_name => grid.as_query.merge(order: column.name, descending: !grid.as_query[:descending])) do
    = column.header
    - if !grid.as_query[:descending].nil? && column.name == grid.as_query[:order]
      %i.fa{class: "fa-sort-#{grid.as_query[:descending] ? :desc : :asc}"}